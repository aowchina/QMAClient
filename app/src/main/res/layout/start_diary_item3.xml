<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:src="@mipmap/main_post_choice"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_contentdia_start3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="觀骨整形"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">
        <TextView
            android:text="来自小组"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_body_start3"
            android:text="[鼻部]"
            android:textColor="@color/basic_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_showa_start3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_showb_start3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_showc_start3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:padding="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.minfo.quanmei.widget.CircleImageView
            android:id="@+id/iv_useicon_start3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_usename_start3"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"
            android:text="消失的雨点"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_time_start3"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:text="9小时前"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_hand_start"
            android:layout_width="wrap_content"
            android:src="@mipmap/main_post_like"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_hand_start3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="555"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_share_start"
            android:layout_width="wrap_content"
            android:src="@mipmap/main_post_review"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_share_start3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="222"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:id="@+id/start_diary_bottomline3"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f5f5f5"/>
</LinearLayout>