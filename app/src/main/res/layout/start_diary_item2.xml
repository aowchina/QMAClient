<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:background="#FFF"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_essence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/main_post_choice"/>

        <TextView
            android:id="@+id/tv_contentdia_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#171717"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="觀骨整形"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自小组"
            android:textColor="#686868"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_body_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[鼻部]"
            android:textSize="13sp"
            android:textColor="#df4b53"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_imgview_start"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_showa_start"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic"/>

        <ImageView
            android:id="@+id/iv_showb_start"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="7dp">
        <ImageView
            android:id="@+id/iv_useicon_start"
            android:layout_width="30dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_usename_start"
            android:layout_width="wrap_content"
            android:text="消失的雨点"
            android:textSize="13sp"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:text="9小时前"
            android:textSize="13sp"
            android:textColor="#999999"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_hand_start"
            android:layout_width="wrap_content"
            android:src="@mipmap/main_post_like"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_hand_start"
            android:layout_width="wrap_content"
            android:text="555"
            android:textSize="10dp"
            android:textColor="#686868"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_share_start"
            android:layout_width="wrap_content"
            android:src="@mipmap/main_post_review"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_share_start"
            android:layout_width="wrap_content"
            android:text="222"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:textColor="#686868"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!--<View-->
    <!--android:id="@+id/start_diary_bottomline3"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="10dp"-->
    <!--android:background="#f5f5f5"/>-->
</LinearLayout>