<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00000000"
              android:orientation="vertical">

    <com.minfo.quanmei.widget.LLUserTitle
        android:id="@+id/ll_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_first_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还在抗痘进行时的无比痛苦中挣扎着、呐喊着、呻吟着"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_praise"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/iv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/reply"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="回复"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/ll_reply"
                android:background="@drawable/border_praise"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/iv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/praise"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="有用"
                    android:textSize="12sp"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view_have_reply"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:background="@drawable/group_post_top_arrow_left"/>

        <com.minfo.quanmei.widget.LimitListView
            android:id="@+id/llv_second_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:listSelector="@android:color/transparent"
            android:dividerHeight="0.5dp"/>

        <TextView
            android:id="@+id/tv_more_second_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="7dp"
            android:text="更多3回帖"
            android:textColor="@color/basic_color"
            android:textSize="13sp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#eee"/>
    <View
        android:id="@+id/v_foot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="#ffffff"/>

</LinearLayout>
