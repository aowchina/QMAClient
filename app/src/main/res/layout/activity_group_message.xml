<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/groupmessage_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/action_bar_back"
            />



        <TextView
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="群信息"
            android:textColor="@color/basic_color"

            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_manger_groupmessage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="管理"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/basic_color"

            android:textSize="20sp" />

    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.4dp"
        android:background="#eee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <com.minfo.quanmei.widget.PullScrollView
            android:id="@+id/psl_groupmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <RelativeLayout
            android:id="@+id/rl_join_groupmessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"

            android:background="#e333">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/indicator_arrow"
                android:gravity="center"
                android:text="加入"
                android:textColor="#fff"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:id="@+id/v_blank"
            android:layout_width="match_parent"
            android:layout_above="@+id/tv_join_groupmessage"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_blank"
            android:layout_alignParentRight="true"
            android:src="@mipmap/indicator_arrow" />

    </RelativeLayout>


</LinearLayout>
