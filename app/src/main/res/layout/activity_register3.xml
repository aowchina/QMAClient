<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_background"
              android:orientation="vertical">

    <include layout="@layout/common_top"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_code_send_to"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="25.0dip"
            android:textColor="@color/tv_forget_pwd"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="0.0dip"
                android:layout_height="49.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/et_v_code_input_bg"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:textColorHint="@color/tv_hint"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btn_get_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="49.0dip"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/btn_re_get_code_bg"
                android:gravity="center"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:text="获取验证码"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="25.0dip"
            android:background="@drawable/btn_universal"
            android:text="完成"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/cat_paw_xy_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@id/xieyi_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/avaliable_bonus"/>

        <TextView
            android:id="@id/policy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="同意猫爪《用户使用协议》"
            android:textColor="@color/tv_forget_pwd"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
