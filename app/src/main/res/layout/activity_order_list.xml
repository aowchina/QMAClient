<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.minfo.quanmei.activity.OrderListActivity">

    <include layout="@layout/common_top"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f9f7f7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/iv_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/order_to_pay_n"/>
        <ImageButton
            android:id="@+id/iv_service"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/order_to_service_n"/>
        <ImageButton
            android:id="@+id/iv_evalute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/order_to_evalute_n"/>
        <ImageButton
            android:id="@+id/iv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/order_have_cancel_n"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#f9f7f7"/>
        <ImageButton
            android:id="@+id/iv_my_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/order_my_order_n"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f5f5f5"/>
    <FrameLayout
        android:id="@+id/fl_order_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
</LinearLayout>
