<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_whole_doctor_icon_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:padding="3dp"
            android:src="@mipmap/icon_big_star_fill" />

        <TextView
            android:id="@+id/item_whole_doctor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_whole_doctor_icon_img"
            android:text="刘嘉玲"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_whole_doctor_zhiwu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_whole_doctor_name_tv"
            android:background="@drawable/shape_itme_doctor"

            android:ellipsize="end"
            android:singleLine="true"
            android:text="大连微美整形美容医院业务院长"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/item_whole_doctor__specialty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_whole_doctor_name_tv"
            android:layout_below="@+id/item_whole_doctor_name_tv"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="鼻部综合整形，韩式面部年轻化"
            android:textColor="#989898" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#eee" />

    <TextView
        android:id="@+id/item_whole_doctor_summary_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.10"
        android:padding="5dp"
        android:text="毕业与大连医科大学临床医学，从事整形美容外科工作多年。具有高度的审美观和雕塑家的设计技巧，将美学理念与精湛的技术相结合。"
        android:textColor="#989898" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5" />


</LinearLayout>