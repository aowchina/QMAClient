<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_pro_info_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="治疗时长"
                android:textColor="#767676"
                android:gravity="center_horizontal"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_pro_info_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="1-2个小时"
                android:textColor="@color/basic_color"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tv_pro_info_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="治疗次数"
                android:textColor="#767676"
                android:gravity="center_horizontal"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_pro_info_nums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="1次"
                android:textColor="@color/basic_color"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_pro_info_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="麻醉方法"
                android:textColor="#767676"
                android:gravity="center_horizontal"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_pro_info_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="局麻"
                android:textColor="@color/basic_color"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_pro_info_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="是否住院"
                android:textColor="#767676"
                android:gravity="center_horizontal"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_pro_info_hos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="否"
                android:textColor="@color/basic_color"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_pro_info_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恢复时间"
                android:textColor="#767676"
                android:gravity="center"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_pro_info_hftime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="安全恢复1-3个月"
                android:textColor="@color/basic_color"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_pro_info_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拆线时间"
                android:textColor="#767676"
                android:gravity="center_horizontal"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_pro_info_cxtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="无"
                android:textColor="@color/basic_color"
                android:gravity="center_horizontal"/>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>
