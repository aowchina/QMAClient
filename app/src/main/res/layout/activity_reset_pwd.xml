<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_top"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="25.0dip"
            android:text="请保证手机处于正常接收短信状态"
            android:textColor="@color/tv_forget_pwd"
            android:textSize="12sp" />

        <EditText
            android:id="@id/et_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="49.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/et_v_code_input_bg"
            android:drawableLeft="@mipmap/phone_number_sign"
            android:drawablePadding="10.0dip"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:textColorHint="@color/tv_hint"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="49.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/et_v_code_input_bg"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:textColorHint="@color/tv_hint"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/btn_re_get_code_bg"
                android:gravity="center"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:text="获取验证码"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_bind_mobile"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="25.0dip"
            android:background="@drawable/btn_universal"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
