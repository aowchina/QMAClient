<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/common_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:src="@mipmap/action_bar_back"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_nickname"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/god_bg_level"
            android:gravity="center"
            android:text="LV2"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10227670"
            android:maxLength="7"
            android:ellipsize="end"
            android:textColor="@color/basic_color"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="登录"
        android:layout_marginLeft="18dp"
        android:textColor="@color/basic_color"
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:text="注册"
        android:textColor="@color/basic_color"
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLength="10"
        android:text="登录"
        android:textColor="@color/basic_color"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:text="注册"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_scanner"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/civ_user_avatar"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:src="@mipmap/default_head"/>

        <TextView
            android:id="@+id/tv_un_read_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/civ_user_avatar"
            android:layout_alignTop="@+id/civ_user_avatar"
            android:layout_marginRight="-5.0dip"
            android:layout_marginTop="-5.0dip"
            android:background="@mipmap/one_page_home_icon_unread_less"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffff4461"
            android:textSize="12sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/start_search1"
        android:clickable="true"
        android:paddingLeft="3dp"
        android:paddingRight="60dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="6.0dip"
            android:src="@mipmap/main_icon_search"/>

        <EditText
            android:id="@+id/ed_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_search"
            android:background="@android:color/transparent"
            android:hint="搜索项目、日记、帖子"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/search_main"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_search"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="搜索项目、日记、帖子"
            android:textColorHint="#bcbcbc"
            android:textSize="13sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#dddddd"/>


</RelativeLayout>
