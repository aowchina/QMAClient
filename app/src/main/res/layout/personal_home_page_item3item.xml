<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_contentdia_start0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="觀骨整形"
            android:textColor="#171717"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_ishave_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@mipmap/main_post_image" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_diary_start0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:paddingLeft="5dp"
        android:text="很健康" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_diary1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_pic"/>
        <ImageView
            android:id="@+id/home_diary2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_pic"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_useicon_start0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_usename_start0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:text="消失的雨点"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time_start0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="9小时前"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:id="@+id/start_diary_bottomline"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f5f5f5" />
</LinearLayout>
