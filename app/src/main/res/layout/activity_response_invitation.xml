<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/responseinvitation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/action_bar_back"/>

        <TextView
            android:id="@+id/tv_response_invitation"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="回复"

            android:textColor="#ff4461"
            android:textSize="16sp"/>
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.4dp"
        android:background="#eee"/>

    <LinearLayout
        android:id="@+id/ll_new_invitation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_content_responseinvitation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="top"
            android:text="请输入回复内容"
            android:textColor="#aaa"/>

        <LinearLayout
            android:id="@+id/ll_img_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/iv_upload_responseinvitation"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/topic_upload_pic"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_upload_responseinvitation2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/btn_insert_face_nor"/>

                <ImageView
                    android:id="@+id/iv_face_responseinvitation"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_upload_responseinvitation2"
                    android:src="@mipmap/btn_insert_tag_nor"/>


            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:background="#eee"/>

            <TextView
                android:id="@+id/tv_face_responseinvitation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="表情"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
