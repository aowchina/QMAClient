<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/grouptype_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/action_bar_back"
            />

        <View
            android:id="@+id/v_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_recent_gtype"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/v_center"
            android:background="@drawable/text_group_left"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/basic_color"

            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_cream_gtype"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/v_center"
            android:background="@drawable/text_group_right_un"
            android:gravity="center"
            android:text="精华"
            android:textSize="14sp" />


    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.4dp"
        android:background="#eee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <com.minfo.quanmei.widget.PullScrollView
            android:id="@+id/psl_grouptype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <RelativeLayout
            android:id="@+id/tv_send_gtype"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_bottom">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/indicator_arrow"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="发帖"
                android:textColor="#fff"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>